{% extends 'layout-center.html.twig' %}


{% block header_h2 %}
  Créer une fiche mission
{% endblock %}


{% block card_body %}
  {{ form_start(form) }}

    {{ form_widget(form.status, {'attr': {'hidden': 'true'}}) }}
    {{ form_widget(form.dateAssigned, {'attr': {'hidden': 'true'}}) }}
    {{ form_widget(form.dateFinished, {'attr': {'hidden': 'true'}}) }}
    {{ form_widget(form.volunteer, {'attr': {'hidden': 'true'}}) }}

    {# User role passed to JS through data attributes #}
    <div id="userData" data-name="{{ app.user.name }}" data-is-gla="{{ app.user.isGla ? true : false }}" class="row justify-content-between">
      <div class="d-flex">
        <div class="col-sm">
        {{ form_row(form.gla, {'attr': {'autocomplete': 'off'}}) }}
        <div class="dropdown">
          <div id ="glaSearchResults" class="dropdown-menu searchResults">
          </div>
        </div>
      </div>
      </div>
      <div class="col-sm d-flex justify-content-sm-end">
        {{ form_row(form.dateCreated, {'attr': {'readonly': 'true'}}) }}
      </div>
    </div>

    {{ form_row(form.accomodation) }}

    <div class="row justify-content-between">
      <div class="col-sm order-sm-2 d-flex justify-content-end align-items-start">
        <a href="{{ path('app_accomodation_new') }}" class="btn btn-sm btn-outline-secondary">
          <i class="fas fa-plus"></i>
          Ajouter une adresse
        </a>
      </div>

      <div class="d-flex">
        <div class="col-sm form-group">
          <label for="accomodation_ownerType" class="form-control-label">Propriétaire :</label>
          <input type="text" id="accomodation_ownerType" name="accomodation[ownerType]" readonly="true" class="form-control"/>
        </div>
      </div>
    </div>

    <br>

    {{ form_row(form.description) }}
    {{ form_row(form.info) }}
    {{ form_widget(form.conclusions, {'attr': {'hidden': 'true'}}) }}

    {{ form_label(form.attachment) }}
    <div class="alert alert-info">
      Il n'est possible de joindre qu'<strong>un seul fichier</strong>, au format <strong>PDF uniquement</strong>.
    </div>
    {{ form_widget(form.attachment) }}
{% endblock %}

{% block card_footer %}
    <div class="d-flex justify-content-end">
      <input type="submit" class="btn btn-primary mr-2" value="Créer la fiche mission"/>
      <a href="{{ path('app_mission_new') }}" class="btn btn-outline-secondary">
        Vider
      </a>
    </div>

  {{ form_end(form) }}
{% endblock %}

{% block javascripts %}

  {{ parent() }}

  <script src="{{ asset('js/ajax.js') }}"></script>

  <script>
  (function() {
    let name, isGla, isVolunteer;

    // Prepopulate fields "owner type" and "info" with selected accomodation info
    function getAccomodationInfo() {
      const id = encodeURIComponent(document.getElementById('mission_accomodation').value);
      
      ajaxPost("{{ path('app_accomodation_info') }}", {'id': id}, function(JSONResponse) {
        let data = JSON.parse(JSONResponse);

        document.getElementById('accomodation_ownerType').value = data.ownerType;
        document.getElementById('mission_info').value = data.access;
      });
    }

    // Get user's name and isGla from Twig and prepopulate field "Provenance GLA"
    function setGla() {
      let userDataElt = document.getElementById('userData');
      if (userDataElt) {
        name = userDataElt.getAttribute('data-name');
        isGla = userDataElt.getAttribute('data-is-gla');
      }
      if (isGla) {
        document.getElementById('mission_gla').value = name;
      }
    }
    

    document.addEventListener('DOMContentLoaded', setGla);

    document.addEventListener('DOMContentLoaded', getAccomodationInfo);
    document.getElementById('mission_accomodation').addEventListener('change', getAccomodationInfo);


    let glaInput = document.getElementById('mission_gla'),
        resultsDiv = document.getElementById('glaSearchResults');

    // Suggestion of GLAs based on input
    function glaSuggestions(search) {
      // Ajax query to get GLAs matching search
      ajaxPost("{{ path('app_user_suggestions') }}", {'search': search, 'category': 'gla'}, (data) => {
        let glas = data.split('|');

        if (glas && glas[0] !== '') {
          resultsDiv.innerHTML = '';
          
          // Add GLA to suggestions
          glas.forEach(gla => displaySuggestion(gla));

          // Show suggestions
          resultsDiv.style.display = "block";
        }
      });
    }

    function displaySuggestion(gla) {
      // Create a dropdown item for each GLA
      let a = document.createElement('a');
      a.className = 'dropdown-item';
      a.href = '#';
      a.innerHTML = gla;

      a.addEventListener('click', (e) => {
        // Fill GLA input with selected name
        let value = e.target.innerHTML;
        glaInput.value = value;
        // Hide suggestions once one has been selected
        resultsDiv.style.display = "none";
      });

      resultsDiv.appendChild(a);
    }


    glaInput.addEventListener('input', (e) => {
      let search = e.target.value.trim();
      glaSuggestions(search);
    });

    glaInput.addEventListener('focus', (e) => {
      let search = e.target.value.trim();
      glaSuggestions(search);
    });

    glaInput.addEventListener('blur', () => {
      setTimeout(() => resultsDiv.style.display = "none", 200)
    });
  })();
  </script>

{% endblock %}
