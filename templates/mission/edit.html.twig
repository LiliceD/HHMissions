{% extends 'mission/layout.html.twig' %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block layout_h3 %}
  Modifier la fiche mission
{% endblock %}

{% block content %}
  
  {{ form_start(form) }}

    {{ form_row(form.status, {'attr': {'readonly': 'true'}}) }}

    {{ form_row(form.dateCreated, {'attr': {'readonly': 'true'}}) }}
    {{ form_row(form.dateAssigned) }}
    {{ form_row(form.dateFinished) }}

    {{ form_row(form.gla, {'attr': {'readonly': 'true'}}) }}
    {{ form_row(form.volunteer) }}
    
    {{ form_row(form.accomodation) }}
    
    {{ form_row(form.description) }}
    {{ form_row(form.info) }}
    {{ form_row(form.conclusions) }}

    {{ form_label(form.attachment) }}
    {% if mission.attachment %}
      <div class="alert alert-warning">
        Attention, cette mission a déjà une pièce jointe ! Si vous ajoutez un fichier, il remplacera le fichier existant.<br>
        Pour voir le PDF actuellement enregistré, <a href="{{ asset('uploads/pdf/' ~ attachmentUrl) }}" target="_blank" class="alert-link">cliquez ici</a>.
      </div>
    {% endif %}
    {{ form_widget(form.attachment) }}

    <hr>

    <div class="row justify-content-end align-items-center">
      <input type="submit" class="btn btn-primary mr-2" value="Valider"/>
      <a href="{{ path('app_missions_view', {'id': mission.id}) }}" class="btn btn-outline-secondary mr-4">
        Annuler
      </a>
    </div>
  {{ form_end(form) }}

  <br>
{% endblock %}