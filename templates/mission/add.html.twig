{% extends 'mission/layout.html.twig' %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block layout_h3 %}
  Créer une fiche mission
{% endblock %}

{% block content %}

  {{ form_start(form, {'attr': {'onLoad': 'getAccess()'}}) }}

    {{ form_row(form.status, {'attr': {'readonly': 'true'}}) }}

    {{ form_row(form.dateCreated, {'attr': {'readonly': 'true'}}) }}
    {{ form_widget(form.dateAssigned, {'attr': {'hidden': 'true'}}) }}
    {{ form_widget(form.dateFinished, {'attr': {'hidden': 'true'}}) }}

    {{ form_row(form.gla) }}
    {{ form_widget(form.volunteer, {'attr': {'hidden': 'true'}}) }}

    {{ form_row(form.accomodation) }}
    
    {{ form_row(form.description) }}
    {{ form_row(form.info) }}
    {{ form_widget(form.conclusions, {'attr': {'hidden': 'true'}}) }}

    {{ form_widget(form.pdfScan, {'attr': {'hidden': 'true'}}) }}
    
    <input type="submit" class="btn btn-primary" value="Créer la Fiche Mission">

  {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script>
  // Prepopulate field "info" with accomodation access
  function getAccess() {
    $.getJSON("{{ path('app_accomodation_access') }}",
              {'id': $("#mission_accomodation").val()},
              function(data){
                $("#mission_info").val(data.access);
              });
  }

  $("body").bind("load", getAccess());
  $("#mission_accomodation").bind("change", getAccess());
  </script>

{% endblock %}