{% extends 'mission/layout.html.twig' %}

{% block title %}
  Suivi des {{ parent() }}
{% endblock %}

{% block layout_h3 %}
  Liste des missions
{% endblock %}

{% block content %}
  
  <table class="table table-hover">

    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Date demande</th>
        <th scope="col">Provenance GLA</th>
        <th scope="col">Adresse</th>
        <th scope="col">Description mission</th>
        <th scope="col">Statut</th>
        <th scope="col" colspan="2"></th>
      </tr>
    </thead>

    <tbody>

      {% for mission in missions %}
        <tr>
          <td>{{ mission.id }}</td>
          <th scope="row">{{ mission.dateCreated|date('d/m/y') }}</th>
          <td>{{ mission.gla }}</td>
          <td>
            {% if mission.accomodation.name %}
              {{ mission.accomodation.name }} - 
            {% endif %}
            {{ mission.accomodation.street }}
            <br>
            {{ mission.accomodation.postalCode }} {{ mission.accomodation.city }}
          </td>
          <td><div class="text-ellipsis">{{ mission.description }}</div></td>
          <td>{{ mission.status }}</td>
          <td>
            <a href="{{ path('app_missions_view', {'id': mission.id}) }}" title="Voir la FM {{ mission.id }}" class="btn btn-primary btn-sm">
              <i class="fas fa-eye"></i>
              Voir
            </a>
          </td>
          <td>
            <a href="{{ path('app_missions_edit', {'id': mission.id}) }}" title="Modifier la FM {{ mission.id }}" class="btn btn-outline-primary btn-sm">
              <i class="fas fa-edit"></i>
              Modifier
            </a>
          </td>
        </tr>
      {% endfor %}

    </tbody>
  </table>
  
{% endblock %}