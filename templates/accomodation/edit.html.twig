{% extends 'accomodation/layout.html.twig' %}


{% block header_h2 %}
  Modifier un logement
{% endblock %}

{% block header_button %}
  
{% endblock %}

{% block card_body %}
  {# Modal to confirm accomodation delete #}
  <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Supprimer le logement</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Confirmez-vous la suppression de ce logement ?</p>
          <p>
            {% if accomodation.name %}
              {{ accomodation.name }}<br>
            {% endif %}
            {{ accomodation.street }}<br>
            {{ accomodation.postalCode }} {{ accomodation.city }}
          </p>
        </div>
        <div class="modal-footer">
          <a href="{{ path('app_accomodation_delete', {'id': accomodation.id}) }}" class="btn btn-danger">Supprimer</a>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
        </div>
      </div>
    </div>
  </div>

  {# Edit form #}
  {{ parent() }}
{% endblock %}

{% block card_footer %}
  {# Delete button opening a modal #}
  {# only visible for admin #}
  {% if is_granted('ROLE_ADMIN') %}
    <button class="btn btn-sm btn-outline-danger" data-toggle="modal" data-target="#deleteModal">
      <i class="fas fa-trash-alt"></i>
      Supprimer le logement
    </button>
  {% endif %}
{% endblock %}
