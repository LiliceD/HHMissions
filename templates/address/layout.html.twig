{% extends 'layout-card-md.html.twig' %}
{% from 'macros.html.twig' import formButtons as formButtons %}

{% block title %}
  Logements - {{ parent() }}
{% endblock %}


{% block header_button %}
  <a href="{{ path('app_address_list') }}" class="btn btn-outline-secondary">
    <i class="fas fa-chevron-left"></i>
    Retour Ã  la liste
  </a>
{% endblock %}


{% block card_body %}
  {{ form_start(form) }}

    <div class="row justify-content-between">
      <div class="col-sm-6">
        {{ form_row(form.name) }}
      </div>
    </div>

    {{ form_row(form.street) }}

    <div class="row justify-content-between">
      <div class="col-sm-3">
        {{ form_row(form.zipCode) }}
      </div>
    
      <div class="col-sm-9">
        {{ form_row(form.city) }}
      </div>
    </div>

    <div class="d-sm-flex">
      {{ form_row(form.ownerType) }}
    </div>

    {{ form_row(form.access) }}
    
    <br>
    
    {# Buttons Submit / Cancel #}
    {{ formButtons(path('app_address_list')) }}
  {{ form_end(form) }}
{% endblock %}


{% block javascripts %}
  {{ parent() }}

  <script src="{{ asset('js/functions.js') }}"></script>

  <script>
    (function() {
      // Remove accent and capitalize name, address and city
      document.getElementById("address_name").addEventListener("input", (e) => {
        e.target.value = capitalizeText(e.target.value);
      });
      document.getElementById("address_street").addEventListener("input", (e) => {
        e.target.value = capitalizeText(e.target.value);
      });
      document.getElementById("address_city").addEventListener("input", (e) => {
        e.target.value = capitalizeText(e.target.value);
      });

      // Replace with city name dynamic population
      document.getElementById("address_zipCode").addEventListener("change", (e) => {
        const input = e.target.value; 
        if (input.match(/^6900\d$/)) {
          document.getElementById("address_city").value = "LYON";
        }
      });
    })();
  </script>
{% endblock %}
