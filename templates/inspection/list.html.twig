{% extends 'address/list.html.twig' %}


{% block title %}
    Fiches Visite d'Immeuble - {{ parent() }}
{% endblock %}


{% block header_h2 %}
    Liste des rapports de visites d'immeuble
{% endblock %}

{% block header_button %}
    {# button to add address only visible for gla and admin #}
    {% if is_granted(constant('App\\Entity\\User::ROLE_VOLUNTEER')) %}
        <a href="{{ path('app_inspection_new') }}" class="btn btn-success mr-2">
            <i class="fas fa-plus"></i>
            Ajouter une visite
        </a>
    {% endif %}
    <a href="{{ constant('App\\Utils\\Constant::ADDRESS_SHAREPOINT_FOLDER') }}" target="_blank" class="btn btn-sm btn-secondary mt-3 mt-sm-0">
        <i class="fas fa-external-link-alt"></i>
        Dossier Immeubles
    </a>
{% endblock %}
