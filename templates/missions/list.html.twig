{% extends 'missions/layout.html.twig' %}

{% block title %}
	Suivi des {{ parent() }}
{% endblock %}

{% block layout_h3 %}
	Liste des missions
{% endblock %}

{% block content %}
	
	{% for mission in missions %}
		<div class="row justify-content-between"><div class="col-md-8">
			[{{ mission.id }}] Créée le <strong>{{ mission.dateCreated|date('d/m/Y') }}</strong>, par <strong>{{ mission.gla }}</strong> - {{ mission.accomodation.address }}
		</div>
		<div class="col-md-4">
			<a href="{{ path('app_missions_view', {'id': mission.id}) }}" class="btn btn-primary btn-sm">
	      <i class="fas fa-eye"></i>
	      Voir
	    </a>
			<a href="{{ path('app_missions_edit', {'id': mission.id}) }}" class="btn btn-outline-primary btn-sm">
	      <i class="fas fa-edit"></i>
	      Modifier
	    </a>
		</div></div>
		<br>
	{% else %}
		<p>Pas de missions !</p>
	{% endfor %}
	
{% endblock %}